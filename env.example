# VoiceoverStudioFinder Environment Variables
# Copy this file to .env.local and update with your actual values

# Application Configuration
NEXT_PUBLIC_BASE_URL="http://localhost:3000"  # Production: https://voiceoverstudiofinder.com (no www)

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/vostudiofinder_dev"

# Turso Database (Alternative/Production)
TURSO_DATABASE_URL="your-turso-database-url-here"
TURSO_AUTH_TOKEN="your-turso-auth-token-here"

# NextAuth.js Authentication
NEXTAUTH_SECRET="your-secret-key-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Admin Authentication (Legacy from vosf-old-site)
AUTH_USERNAME="admin"
AUTH_PASSWORD="your-secure-password-here"
JWT_SECRET="your-jwt-secret-key-here"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
FACEBOOK_CLIENT_ID="your-facebook-app-id"
FACEBOOK_CLIENT_SECRET="your-facebook-app-secret"
TWITTER_CLIENT_ID="your-twitter-client-id"
TWITTER_CLIENT_SECRET="your-twitter-client-secret"

# External APIs
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Stripe Payment Processing
# IMPORTANT: Use test keys (sk_test_*, pk_test_*) for development
# and live keys (sk_live_*, pk_live_*) for production

# Server-side secret key (never expose to client)
# Get from: Stripe Dashboard → Developers → API keys → Secret key
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"

# Client-side publishable key
# Get from: Stripe Dashboard → Developers → API keys → Publishable key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"

# Webhook signing secret (required for webhook verification)
# Get from: Stripe Dashboard → Developers → Webhooks → [Your endpoint] → Signing secret
# For local testing, use Stripe CLI: stripe listen --forward-to localhost:3000/api/stripe/webhook
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Membership Price ID (server-only, one-time annual payment)
# 1. Go to: Stripe Dashboard → Products → Create product
# 2. Set name: "Annual Membership"
# 3. Set price: £25 GBP (or your currency)
# 4. Set billing: One-time (NOT recurring/subscription)
# 5. Copy the Price ID (starts with "price_")
STRIPE_MEMBERSHIP_PRICE_ID="price_your-membership-price-id"

# 5-Year Membership Price ID (server-only, one-time payment)
STRIPE_5YEAR_MEMBERSHIP_PRICE_ID="price_your-5year-membership-price-id"

# Featured Studio Upgrade Price ID (server-only, one-time payment for 6 months featured)
# Price: £100 GBP for 6 months featured placement on homepage
STRIPE_6MONTH_FEATURED_STUDIO_PRICE_ID="price_your-6month-featured-price-id"

# REMOVED: Do NOT expose price IDs to client for security
# Server selects price ID internally

# PayPal Payment Processing (Alternative/Fallback)
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_ENVIRONMENT="sandbox"
PAYPAL_PLAN_ID="P-your-paypal-plan-id"

# Email Service (Resend)
RESEND_API_KEY="re_your-resend-api-key"
RESEND_FROM_EMAIL="VoiceoverStudioFinder <support@voiceoverstudiofinder.com>"
RESEND_REPLY_TO_EMAIL="support@voiceoverstudiofinder.com"  # Optional: explicit reply-to address

# Bot Protection (Cloudflare Turnstile)
# Get from: Cloudflare Dashboard → Turnstile → Create site
# Use "Managed" challenge mode for production
NEXT_PUBLIC_TURNSTILE_SITE_KEY="your-turnstile-site-key"
TURNSTILE_SECRET_KEY="your-turnstile-secret-key"

# Cron Job Security
# Generate a random secret: openssl rand -hex 32
CRON_SECRET="your-cron-secret-key-change-in-production"

# File Upload (Cloudinary)
CLOUDINARY_CLOUD_NAME="your-cloudinary-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Redis Cache (for search performance)
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
CACHE_PREFIX="vsf"

# Legacy Database (for migration from old site)
LEGACY_DB_HOST="localhost"
LEGACY_DB_USER="root"
LEGACY_DB_PASSWORD="your-legacy-db-password"
LEGACY_DB_NAME="cl59-theshows2"

# Development
NODE_ENV="development"

# Test Scripts (only needed when running specific test scripts)
# BATEY_TEST_PASSWORD="your-test-password-here"  # For scripts/create-test-user-batey.ts
